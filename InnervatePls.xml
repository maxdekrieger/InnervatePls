<Ui>

    <Frame  name = "InnervatePlsButtonFrame" parent="UIParent"
            enableMouse="true"
            movable="true"
            resizable="true">

        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Size>
            <AbsDimension x="75" y="75"/>
        </Size>

        <ResizeBounds>
            <minResize x="45" y="45"/>
            <maxResize x="300" y="300"/>
        </ResizeBounds>
   
        <Backdrop   bgFile="Interface\TutorialFrame\TutorialFrameBackground"
                    edgeFile="Interface\Tooltips\UI-Tooltip-Border"
                    tile="true"
        >

            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
            
            
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>

            <BackgroundInsets>
                <AbsInset left="4" right="3" top="4" bottom="3"/>
            </BackgroundInsets>

        </Backdrop>

        <Frames>

            <Button name="$parent_Button" parent="InnervatePlsButtonFrame" >

                <Anchors>
                    <Anchor point="CENTER"/>
                </Anchors>

                <NormalTexture file="Interface\Icons\spell_nature_lightning"/>

                <HighlightTexture file="Interface\Icons\spell_nature_lightning">
                    <Color  a="0.4"/>
                </HighlightTexture>

                <Scripts>
                    <OnClick>
                        InnervatePls_Button_OnClick()
                    </OnClick>

                    <OnUpdate>
                        InnervatePls_Button_OnUpdate()
                    </OnUpdate>
                </Scripts>

            </Button>

            <Button name="$parent_Resize_Button" parent="InnervatePlsButtonFrame" >
            
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="-3" y="3"/>
                        </Offset>
                    </Anchor>
                </Anchors>

                <NormalTexture file="Interface\MINIMAP\TRACKING\OBJECTICONS">
                    <TexCoords left="0" right="0.125" top="0" bottom="0.5"/>
                </NormalTexture>

                <HighlightTexture file="Interface\MINIMAP\TRACKING\OBJECTICONS">
                    <TexCoords left="0.125" right="0.25" top="0" bottom="0.5"/>
                </HighlightTexture>

                <Scripts>
                    <OnUpdate>
                        InnervatePls_ButtonFrame_Resize_Button_OnUpdate()
                    </OnUpdate>

                    <OnMouseDown>
                        InnervatePls_ButtonFrame_Resize_Button_OnMouseDown()
                    </OnMouseDown>

                    <OnMouseUp>
                        InnervatePls_ButtonFrame_Resize_Button_OnMouseUp()
                    </OnMouseUp>

                </Scripts>

            </Button>
            
        </Frames>

        <Scripts>

            <OnMouseDown>
                InnervatePls_ButtonFrame_OnMouseDown()
            </OnMouseDown>
            
            <OnMouseUp>
                InnervatePls_ButtonFrame_OnMouseUp()
            </OnMouseUp>

            <OnUpdate>
                InnervatePls_ButtonFrame_OnUpdate()
            </OnUpdate>  

            <OnLoad>
                self:RegisterEvent("CHAT_MSG_ADDON")
                self:RegisterEvent("ADDON_LOADED")
            </OnLoad>

            <OnEvent>
                InnervatePls_ButtonFrame_OnEvent(event, ...)
            </OnEvent>
        </Scripts>

    </Frame>

    <Frame  name = "InnervatePlsButtonFrame_Druid" parent="UIParent"
            enableMouse="true"
            movable="true"
            resizable="true"
   
    >
        <Anchors>
            <Anchor point="CENTER">
                <Offset x="-120" y="150"/>
            </Anchor>
        </Anchors>

        <Size>
            <AbsDimension x="175" y="115"/>
        </Size> 

        <Backdrop   bgFile="Interface\TutorialFrame\TutorialFrameBackground"
                    edgeFile="Interface\Tooltips\UI-Tooltip-Border"
                    tile="true">

            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
            
            
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>

            <BackgroundInsets>
                <AbsInset left="4" right="3" top="4" bottom="3"/>
            </BackgroundInsets>

        </Backdrop> 
        
        <Frames>

            <Button name="$parent_Green_Button" parent="InnervatePlsButtonFrame_Druid" inherits="SecureActionButtonTemplate">

                <Size>
                    <AbsDimension x="50" y="50"/>
                </Size> 

                <Anchors>
                    <Anchor point="CENTER">
                        <Offset x="-25" y="-25"/>
                    </Anchor>
                </Anchors>

                <NormalTexture file="Interface\Icons\spell_nature_lightning">
                    <Color  r="0" b="0" g="1"/>
                </NormalTexture>

                <HighlightTexture file="Interface\Icons\spell_nature_lightning">
                    <Color  a="0.4"/>
                </HighlightTexture>


                <Attributes>
                    <Attribute name="type" value="spell" />
                    <Attribute name="spell" value= "Flash Heal(Rank 1)"/>
                    <Attribute name="target" value= "target"/>
                </Attributes>
                
                <Scripts>
                    <PostClick>
                        InnervatePlsButtonFrame_Druid_Green_Button_PostClick()
                    </PostClick>
                </Scripts> 

            </Button>

            <Button name="$parent_Red_Button" parent="InnervatePlsButtonFrame_Druid">

                <Size>
                    <AbsDimension x="50" y="50"/>
                </Size> 

                <Anchors>
                    <Anchor point="CENTER">
                        <Offset x="25" y="-25"/>
                    </Anchor>
                </Anchors>

                <NormalTexture file="Interface\Icons\spell_nature_lightning">
                    <Color  r="1" b="0" g="0"/>
                </NormalTexture>

                <HighlightTexture file="Interface\Icons\spell_nature_lightning">
                    <Color  a="0.4"/>
                </HighlightTexture>

                <Scripts>
                    <OnClick>
                        InnervatePlsButtonFrame_Druid_Red_Button_OnClick()
                    </OnClick>
                </Scripts>

            </Button>

        </Frames>

        <Layers>
             <Layer level ="ARTWORK">

                <FontString name="$parent_Mana_Text"
                            inherits="SystemFont_Large"
                            text="0"
                            justifyV="TOP"
                            justifyH="RIGHT">

                    <Size>
                        <AbsDimension x="0" y="10"/>
                    </Size>

                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="20"/>
                            </Offset>
                        </Anchor>
                    </Anchors>

                    <Color r="0.1" g="0.6" b="1" a="0.9"/>

                </FontString>

                <FontString name="$parent_Class_Text"
                            inherits="SystemFont_Large"
                            text="0"
                            justifyV="TOP"
                            justifyH="RIGHT">

                    <Size>
                        <AbsDimension x="0" y="10"/>
                    </Size>

                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="40"/>
                            </Offset>
                        </Anchor>
                    </Anchors>

                    <Color r="1" g="1" b="1"/>

                </FontString>

            </Layer>

        </Layers>

        <Scripts>

            <OnLoad>
                InnervatePlsButtonFrame_Druid_OnLoad()
            </OnLoad>

            <OnUpdate>
                InnervatePlsButtonFrame_Druid_OnUpdate()
            </OnUpdate>

            <OnMouseDown>
                InnervatePlsButtonFrame_Druid_OnMouseDown()
            </OnMouseDown>

            <OnMouseUp>
                InnervatePlsButtonFrame_Druid_OnMouseUp()
            </OnMouseUp>

        </Scripts>
    </Frame>

</Ui>